<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <record id="res_partner_bike_form" model="ir.ui.view">
        <field name="name">res.partner.bike.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_rentals" type="object" class="oe_stat_button" icon="fa-bicycle">
                    <field name="rental_count" widget="statinfo" string="Locations"/>
                </button>
                <button name="action_view_contracts" type="object" class="oe_stat_button" icon="fa-file-text">
                    <field name="contract_count" widget="statinfo" string="Contrats"/>
                </button>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Bike Shop" name="bike_shop">
                    <group>
                        <group string="Preferences">
                            <field name="is_bike_customer"/>
                            <field name="preferred_bike_type"/>
                            <field name="bike_size"/>
                            <field name="customer_since"/>
                            <field name="loyalty_points"/>
                        </group>
                        <group string="Documents">
                            <field name="id_document_on_file"/>
                            <field name="has_active_rental"/>
                            <field name="current_rental_id"/>
                        </group>
                    </group>
                    <group string="Statistiques">
                        <field name="rental_total_spent"/>
                    </group>
                    <field name="customer_notes"/>
                </page>
            </xpath>
        </field>
    </record>

   
    <record id="res_partner_bike_list" model="ir.ui.view">
        <field name="name">res.partner.bike.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="preferred_bike_type"/>
                <field name="bike_size"/>
                <field name="rental_count"/>
                <field name="rental_total_spent"/>
                <field name="loyalty_points"/>
                <field name="has_active_rental"/>
            </list>
        </field>
    </record>

    
    <record id="res_partner_bike_search" model="ir.ui.view">
        <field name="name">res.partner.bike.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </search>
        </field>
    </record>

    
    <record id="action_bike_customers" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_bike_customer', '=', True)]</field>
        <field name="context">{'default_is_bike_customer': True}</field>
    </record>
</odoo>
