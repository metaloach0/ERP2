<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Accessory List View -->
    <record id="bike_accessory_list" model="ir.ui.view">
        <field name="name">bike.accessory.list</field>
        <field name="model">bike.accessory</field>
        <field name="arch" type="xml">
            <list>
                <field name="reference"/>
                <field name="name"/>
                <field name="category"/>
                <field name="brand"/>
                <field name="sale_price"/>
                <field name="stock_quantity"/>
            </list>
        </field>
    </record>

    <!-- Accessory Form View -->
    <record id="bike_accessory_form" model="ir.ui.view">
        <field name="name">bike.accessory.form</field>
        <field name="model">bike.accessory</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Nom de l'accessoire"/></h1>
                        <field name="reference" readonly="1"/>
                    </div>
                    <group>
                        <group string="Informations">
                            <field name="category"/>
                            <field name="brand"/>
                            <field name="compatible_bike_types"/>
                        </group>
                        <group string="Prix et stock">
                            <field name="sale_price"/>
                            <field name="cost_price"/>
                            <field name="stock_quantity"/>
                            <field name="stock_min"/>
                            <field name="is_low_stock"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Technique" name="technical">
                            <group>
                                <field name="product_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="active"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Accessory Search View -->
    <record id="bike_accessory_search" model="ir.ui.view">
        <field name="name">bike.accessory.search</field>
        <field name="model">bike.accessory</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="reference"/>
                <field name="category"/>
                <field name="brand"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bike_accessory" model="ir.actions.act_window">
        <field name="name">Accessoires</field>
        <field name="res_model">bike.accessory</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
